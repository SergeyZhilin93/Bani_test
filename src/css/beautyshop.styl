block1170()
	width 1170px
	margin 0 auto

	@media (max-width: 1209px)
		width 100%
		padding 0 20px


$darkText = #111f25

html.beautyshop
	header
		border-bottom none
	.beautyShopLink
		display none

section.beautyShop
	--galleryImgWidth 260px

	padding 22px 0 65px
	background-color #fff

	.breadcrumbs
		block1170()
		display flex
		align-items center
		margin-bottom 6px

		a, span
			text-decoration none
			font 500 14px 'Museo Sans Cyrl'
			color #979797
		span
			display inline-block

			&.round
				background-color #979797
				border-radius 50%
				width 4px
				height 4px
			&:not(:first-child)
				margin-left 12px

	h1
		block1170()
		margin-bottom 44px

	.department-paginator
		display flex
		justify-content space-between
		border-bottom 1px solid rgba(0, 0, 0, 0.4)
		width 1170px
		margin 0 auto 49px
		overflow-x auto
		scrollbar-width none
		&::-webkit-scrollbar
			display none

		p
			font: 500 18px 'Museo Cyrl'
			color: #000
			padding-bottom 23px
			cursor pointer
			text-align center
			width calc(100% / 3)

			&.active
				border-bottom 4px solid $darkText
			&:first-child
				text-align left
			&:last-child
				text-align right

	.department-block
		.department-item
			display none

			&.active
				display block

			.blockTitle
				display flex
				align-items flex-end
				height 32.6vw
				background-size 100% auto
				background-position 0 0
				background-repeat no-repeat
				background-color transparent

				&.barber
					background-image url("../assets/img/beautyshop/barber.jpg")
				&.pedicure
					background-image url("../assets/img/beautyshop/pedicure.jpg")
				&.manicure
					background-image url("../assets/img/beautyshop/manicure.jpg")
				h2
					color #fff
					padding-left 13.38vw
					padding-bottom 4.38vw
					font: 500 64px 'Museo Sans Cyrl'

		.description
			block1170()
			margin-top 61px
			display flex
			justify-content space-between
			align-items center

			.text
				font 300 18px / 1.56 'Museo Sans Cyrl'
				color $darkText
				width 640px
				letter-spacing 0.24px

			.button button
				border none
				border-radius 8px
				background-color #ba8d6c
				color #fff
				width 220px
				height 62px
				padding 0
				text-align center
				font 500 18px Lato
				cursor pointer
				outline none

		.infoBlock
			block1170()
			margin-top 58px
			display flex
			justify-content space-between
			align-items flex-start

			.shedule
				margin-right 150px
				width 186px
				flex-shrink 0
				font-family 'Museo Sans Cyrl'
				font-weight 300

				.body
					font-size 16px
					letter-spacing: 0.27px
					.line
						display flex
						justify-content space-between
						&:not(:last-child)
							margin-bottom 24px

					.name
						font-size 14px
						text-transform uppercase
					.value a
						color $darkText
						text-decoration none

			.title
				color $darkText
				font 500 22px 'Museo Sans Cyrl'
				letter-spacing 0.22px
				margin-bottom 70px
				&.short
					margin-bottom 24px

			.price
				flex-grow: 1
				font-family: 'Museo Sans Cyrl'

				$tdTopPadding = 12px
				$tdBiggerTop = 20px
				$tdBigTop = 32px
				table
					width 100%
					border-collapse collapse
					th, td
						vertical-align top
						color $darkText
						font-size 16px
						padding-top $tdTopPadding
					th
						padding-top 0
						font normal 12px Lato
						color #000
						opacity 0.5
						padding-bottom $tdTopPadding

						&.hairType, &.emptyCenter
							width 9.6%
							text-align left
						&.cost
							width 42.7%
							text-align right
					i
						display block
						font-style normal
						color rgba(17, 31, 37, 0.5)

					tr.sectionEnd td, td.sectionEnd
						border-bottom 1px solid rgba(203, 203, 203, 0.6)
						padding-bottom $tdBigTop
					tr.topPadding td
						padding-top $tdBigTop
					td
						&.name
							font-weight 500
						&:nth-last-child(2)
							font-weight 300
							font-size 14px
						&:nth-last-child(1)
							font-weight bold
							color #ba8d6c
							text-align right
						&.subTitle
							font 500 22px 'Museo Sans Cyrl'
							color $darkText
							text-align left
							letter-spacing 0.22px
					tr.thickPad:not(.sectionEnd) td:not(.sectionEnd)
						padding-bottom $tdTopPadding
					tr.biggerTop td
						padding-top $tdBiggerTop

		.gallery
			block1170()
			margin-top 64px
			display grid
			grid-template-columns repeat(auto-fill, var(--galleryImgWidth))
			grid-auto-rows var(--galleryImgWidth)
			gap calc(130px / 3)

			img
				width var(--galleryImgWidth)

	@media (max-width: 1209px)
		padding-bottom 20px

		.department-paginator
			padding 0
			margin 0 20px 20px
			width calc(100% - 40px)

			p
				width auto
				padding-bottom 12px
				margin-right 30px
				font-size 15px
				white-space nowrap
				user-select none

		.department-block
			.department-item
				.blockTitle
					h2
						padding-left 6%

			.description
				margin-top 32px
				flex-direction column

				.text
					width 100%
					margin-bottom 16px

			.infoBlock
				margin-top 40px
				flex-direction column

				.shedule
					width 100%
					margin-right 0
					margin-bottom 40px

					.body .line
						justify-content flex-start

						&:not(:last-child)
							margin-bottom 12px

						.name
							width 80px

				.title
					margin-bottom 20px
					&.short
						margin-bottom 16px

				.price
					width 100%
					table
						width 100%
						th
							white-space nowrap
							&.hairType
								width 20%
							&.cost
								width 35%
						th, td
							font-size 14px
						td
							&:nth-last-child(2)
								font-size 12px
							&:first-child
								padding-right 8px
							&.subTitle
								font-size 18px

			.gallery
				margin-top 56px
				justify-content center

				img:not(.any)
					margin-top 0
					margin-bottom 20px
					margin-right 20px

	@media (max-width: 960px)
		.department-block .department-item .blockTitle h2
			font-size 56px
	@media (max-width: 800px)
		.department-block .department-item .blockTitle h2
			font-size 40px
	@media (max-width: 603px)
		--galleryImgWidth 130px
	@media (max-width: 520px)
		.department-block .department-item .blockTitle h2
			font-size 24px


.overlay.pointer
	cursor pointer

body.openModal
	overflow hidden

.orderBeautyShop
	background-color #fff
	box-shadow 0px 6px 12px rgba(0, 0, 0, 0.15)
	border-radius 10px
	padding 48px 120px 32px
	position fixed
	left 50%
	top  50%
	transform translate(-50%, -50%)
	z-index 3
	font-family 'Museo Sans Cyrl'
	font-weight 500
	color $darkText
	display none

	&.visible
		display block

	label
		display none

	.close_modal
		position absolute
		right 20px
		top 18px
		cursor pointer

	h3
		font-size 24px
		margin 0 0 48px
		text-align center

	.title
		font-size 12px
		margin-bottom 3px
		margin-top 30px

	input:not([type="checkbox"])
		width 316px
		border 2px solid rgba(0, 0, 0, 0.1)
		border-radius 10px
		font-size 14px
		padding 18px 20px

		&::-webkit-input-placeholder
			color #a8a8a8
		&::placeholder
			color #a8a8a8

	label.error
		font-size 0

	[type="checkbox"]
		display none
	label
		display block
		font-size 11px

		&.custom_checkbox
			margin-top 30px

		mark
			background-color transparent
			text-decoration underline

	button
		display block
		width 168px
		height 40px
		margin 48px auto 0
		cursor pointer
		border-radius 8px
		background-color #ba8d6c
		color #fff
		border none
		text-align center
		font-size 13px
		font-family 'Museo Cyrl'
		outline none

	@media (max-width: 1024px)
		z-index 102