footer
	background-color #2E2C2B
	height 405px
	@media screen and (max-width: 1024px)
		height: auto
		padding 40px 0
	.container_footer
		width: 70%
		@media screen and (max-width: 1400px)
			width 90%
		@media screen and (max-width: 1024px)
			width: 100%
	p
		color #ffffff
		text-align center
		opacity 0.3
		font-size: 14px
	.nav_menu
		display flex
		justify-content space-between
		padding-top 38px
		@media screen and (max-width: 1024px)
			padding: 0
			justify-content: center
		nav
			flex-grow 1
			display flex
			align-items center
			justify-content space-between
			@media screen and (max-width: 1024px)
				display: none
		a
			font-family Museo Sans Cyrl
			display flex
			align-items center
			justify-content center
			text-decoration none
			color #ffffff
			text-transform uppercase
			font-size 14px
			transition: .2s linear
			&:hover
				color: #BA8D6C
				transition: .2s linear
		a.logo
			margin 0 72px
	.soc_block
		padding-top 27px
		display flex
		align-items center
		justify-content center
		@media screen and (max-width: 1024px)
			padding: 40px
		a
			text-decoration none
			padding 0 15px
			color #ffffff
	.contacts:not(a)
		display: flex;
		width: 100%;
		justify-content: space-between;
		align-items: center;
		@media screen and (max-width: 1024px)
			flex-direction: column
		.tel-box-mobil
			display: none
			flex-direction: column
			text-align: center
			a
				margin-bottom 24px
			@media screen and (max-width: 1024px)
				display: flex
		.tel-box
			@media screen and (max-width: 1024px)
				display: none
		a
			font-family Museo Cyrl
			color #ffffff
			text-decoration none
		.present
			font-size: 16px
			border 2px solid #ffffff
			border-radius 8px
			padding 15px 20px
			transition .2s linear
			&:hover
					transition .2s linear
					border 2px solid #BA8D6C
					color: #BA8D6C
			@media screen and (max-width: 1024px)
				width: 234px
				height 48px
				text-align: center
				padding: 15px 0 0 0
				margin-bottom 24px
		.left-num
			font-size 22px
			margin-right 38px
			@media screen and (max-width: 1400px)
				font-size: 18px
			@media screen and (max-width: 1024px)
				margin: 0
			span
				color: #BA8D6C
		.right-num
			font-size 22px
			@media screen and (max-width: 1400px)
				font-size: 18px
			span
				color: #BA8D6C
		.reserve
			padding: 15px 20px
			font-size: 16px
			border 2px solid #ffffff
			border-radius 8px
			font-family Museo Cyrl
			color #ffffff
			text-decoration none
			cursor pointer
			transition .2s linear
			&:hover
					transition .2s linear
					border 2px solid #BA8D6C
					color: #BA8D6C
			@media screen and (max-width: 1024px)
				width: 234px
				height 48px
				text-align: center
				padding: 14px 0 0 0
				margin-bottom 40px
	.address
		font-weight 500
		padding: 12px 0 56px 0
		font-size 20px
		color #ffffff
		text-align center
		@media screen and (max-width: 1024px)
			padding: 0
			margin-bottom 40px
		h3
			font-family Museo Cyrl
			font-size 20px
			line-height 16px
			opacity 0.5
	p.privacy
		font-family Lato
		font-style normal
		font-weight normal
		font-size 14px
		line-height 20px
