  html.shoeshine
  .contacts-box
    p
      display: none
  h1
    font-weight 400;
    font-size: 2.8vw

  .blockTitle
    &.shoe-shine-tab
      background-image url("../assets/img/shoeshine/shoe-shine.jpg");
  .service_wrapper
    padding: 77px 0;
    font: 32px 'Museo Sans Cyrl';
    h2
      padding-bottom: 53px;
      font-weight 400
    .list-price
      color #BA8D6C;
    .wrapper_content
      display: flex;
      font-size: 24px;
      & > *
        width: 100%;
      & > ul
        -moz-column-count: 2;
        -moz-column-gap: 60px;
        -webkit-column-count: 2;
        -webkit-column-gap: 60px;
        column-count: 2;
        column-gap: 60px;
        padding 0
        & > li
          display: flex;
          justify-content: space-between;
          font-size: 22px;
        & > li:not(:first-child):not(:last-child)
          margin 14px 0
    .list-left
      justify-content: space-between;
      padding-right: 5px;
    .col
      display: flex;
      justify-content: space-between;
      & > p:last-child
        color: #ba8d6c;
    .list-right
      justify-content: space-between;
      padding-left: 35px
    .col
      display: flex;
      justify-content: space-between;
      & > p:last-child
        color: #ba8d6c;
  .container
    h2
      font-size: 32px;
  section.beautyShop .department-block .department-item .blockTitle
    height: 26.6vw;
  div.breadcrumbs, h1, div.department-paginator, div.service_wrapper, div.action_block, section.beautyShop .department-block .gallery
    width: 80%;
    margin-left: auto;
    margin-right: auto;
    .container
      margin 0;
  section.beautyShop .department-block .gallery
    width 80%
    margin-top 64px
    display grid
    grid-template-columns repeat(auto-fill, var(--galleryImgWidth))
    grid-auto-rows var(--galleryImgWidth)
    gap calc(115px / 3)
    justify-content center

    img
      width var(--galleryImgWidth)
  section.beautyShop .department-block .department-item .blockTitle h2
    padding-left: 0;
    width: 80%;
    margin: 0 auto;
  section.beautyShop
	  --galleryImgWidth 354px
  
  @media (max-width: 1209px)
    .gallery
      margin-top 56px

      img:not(.any)
        margin-top 0
        margin-bottom 20px
        margin-right 20px
  @media (max-width: 603px)
    --galleryImgWidth 130px
		
