.feedback
    img.feddback_close(src="assets/img/feedback_close.svg", alt="")
    h3 Забронировать кабинку
    form#form(action="")
        label(for="feedback_name") Ваше имя
        input#feedback_name(type="text", name="name", placeholder="Введите Имя")

        label(for="feedback_phone") Ваш телефон
        input#feedback_phone(type="text", name="phone", placeholder="+7 (___) ___-__-__", autocomplete="off")

        label(for="radio") Выбор кабинки
        #radio
            .small_cab
                input#small(type="radio", name="radio" checked)
                label(for="small") Маленькая
            .middle_cab
                input#middle(type="radio", name="radio")
                label(for="middle") Средняя
            .big_cab
                input#big(type="radio", name="radio")
                label(for="big") Большая
        label#date_label(for="feedback_date") Желаемая дата
        input#feedback_date(type="text", name="date", placeholder="ДД/ММ/ГГ", autocomplete="off")
        .check-box
            input(class="check", type="checkbox", name="terms", id="politics")
            label(for="politics")
            p Даю согласие на
                span обработку персональных данных
        .send_block
            input(class="btn-send" type="submit" name="submit" value="Забронировать")