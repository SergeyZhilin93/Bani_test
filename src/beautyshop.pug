							button.buyService.pedicure Заказать услугу

					.infoBlock
						.shedule
							.title Режим работы:
							.body
								.line
									.name Пн–Вс
									.value 10:00 — 22:00
								.line
									.name Тел.
									.value #[a(href="tel:+74957408436") 7 495 740 8436]
						.price
							.title.short Стоимость
							table
								tr
									th.name
									th.emptyCenter
									th.cost Стоимость

								tr.topPadding.sectionEnd
									td.sectionEnd.name Педикюр #[i (классический, аппаратный, комбинированный)]
									td
									td 2 200 ₽

								tr.topPadding.sectionEnd
									td.sectionEnd.name Педикюр с покрытием гель-лаком
									td
									td 3 000 ₽

								tr.topPadding.sectionEnd
