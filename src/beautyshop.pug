									td.sectionEnd.name Маникюр классический
									td
									td 1 000 ₽

								tr.topPadding.sectionEnd
									td.sectionEnd.name Комбинированный маникюр
									td
									td 1 000 ₽

								tr.topPadding.sectionEnd
