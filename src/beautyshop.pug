									td
									td 1 100 ₽

								tr.topPadding.sectionEnd
									td.sectionEnd.name Устранение дефектов (не медицинское)
									td
									td 250 ₽

					.gallery
						img(alt="" src="assets/img/beautyshop/gallery/1.jpg")
						img(alt="" src="assets/img/beautyshop/gallery/2.jpg")
						img(alt="" src="assets/img/beautyshop/gallery/3.jpg")
